<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DashboardView">
        <attr name="radius" format="dimension"/>     <!--扇形半径-->
        <attr name="padding" format="dimension"/>     <!--上下间距-->
        <attr name="dashWidth" format="dimension"/>     <!--刻度宽度-->
        <attr name="dashHeight" format="dimension"/>     <!--刻度高度-->
        <attr name="topOffset" format="dimension"/>     <!--顶部偏移量-->
        <attr name="startAngle" format="integer"/> <!-- 起始角度-->
        <attr name="sweepAngle" format="integer"/>  <!--绘制角度-->
        <attr name="bigSliceCount" format="integer"/> <!-- 长刻度条数-->
        <attr name="sliceCountInOneBigSlice" format="integer"/> <!-- 长刻度条数-->
        <attr name="arcColor" format="color"/> <!--弧度颜色-->
        <attr name="measureTextSize" format="dimension"/> <!--刻度字体大小-->
        <attr name="textColor" format="color"/> <!--字体颜色-->
        <attr name="headerTitle" format="string"/> <!--表头-->
        <attr name="headerTextSize" format="string"/> <!--表头字体大小-->
        <attr name="headerRadius" format="dimension"/> <!--表头半径-->
        <attr name="pointerRadius" format="dimension"/> <!--指针半径-->
        <attr name="circleRadius" format="dimension"/> <!--中心圆半径-->
        <attr name="minValue" format="integer"/> <!--最小值-->
        <attr name="maxValue" format="integer"/> <!--最大值-->
        <attr name="realTimeValue" format="float"/> <!--实时值-->
        <attr name="stripeWidth" format="dimension"/> <!--色带宽度-->
        <attr name="stripeMode"> <!--色条显示位置-->
            <enum name="normal" value="0"/>
            <enum name="inner" value="1"/>
            <enum name="outer" value="2"/>
        </attr>
        <attr name="bgColor" format="color"/> <!--背景颜色-->
    </declare-styleable>
    <declare-styleable name="HalfDashBoardChart">
        <attr name="halfRadius" format="dimension"/>     <!--扇形半径-->
        <attr name="halfPadding" format="dimension"/>     <!--上下间距-->
        <attr name="halfDashLength" format="dimension"/>     <!--刻度长度-->
        <attr name="halfMaxValue" format="float"/>     <!--最大值-->
        <attr name="halfMinValue" format="float"/>     <!--最小值-->
        <attr name="halfScale" format="integer"/>     <!--小数保留位数-->
        <attr name="halfShowText" format="boolean"/> <!--是否显示百分比和左下角文字-->
    </declare-styleable>
    <declare-styleable name="GradientRoundedRectangleChart">
        <attr name="gradientRoundedRectangleStartColor" format="color"/>
        <attr name="gradientRoundedRectangleEndColor" format="color"/>
        <attr name="gradientRoundedRectangleBottomText" format="string"/>
    </declare-styleable>
    <declare-styleable name="CirclePercentChart">
        <attr name="circlePercentStartColor" format="color"/>
        <attr name="circlePercentEndColor" format="color"/>
        <attr name="circlePercentBottomText" format="string"/>
    </declare-styleable>
    <declare-styleable name="DoubleCirclePercentChart">
        <attr name="doubleCirclePercentStartColor" format="color"/>
        <attr name="doubleCirclePercentEndColor" format="color"/>
        <attr name="doubleCirclePercentStartColor2" format="color"/>
        <attr name="doubleCirclePercentEndColor2" format="color"/>
        <attr name="doubleCirclePercentBottomText" format="string"/>
    </declare-styleable>
</resources>