<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codyy.charts.chartsapplication.DashBoardActivity">

    <com.codyy.mobile.support.chart.GradientRoundedRectangleChart
        android:id="@+id/chart"
        android:layout_width="168dp"
        android:layout_height="62dp"
        app:gradientRoundedRectangleBottomText="故障数"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.codyy.mobile.support.chart.GradientRoundedRectangleChart
        android:id="@+id/chart2"
        android:layout_width="168dp"
        android:layout_height="62dp"
        app:gradientRoundedRectangleBottomText="服务次数"
        app:gradientRoundedRectangleTextSuffix="%"
        app:gradientRoundedRectangleEndColor="#ffa869"
        app:gradientRoundedRectangleStartColor="#ff6496"
        app:layout_constraintTop_toBottomOf="@+id/chart"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
         />
    <com.codyy.mobile.support.chart.GradientRoundedRectangleChart
        android:id="@+id/chart3"
        android:layout_width="168dp"
        android:layout_height="62dp"
        app:gradientRoundedRectangleBottomText="服务次数"
        app:gradientRoundedRectangleTextSuffix="%"
        app:gradientRoundedRectangleEndColor="#ffa869"
        app:gradientRoundedRectangleStartColor="#ff6496"
        app:gradientRoundedRectangleShadowColor="#59ff8481"
        app:gradientRoundedRectangleAngle="148"
        app:gradientRoundedRectangleDrawable="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@+id/chart2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
         />

</android.support.constraint.ConstraintLayout>
