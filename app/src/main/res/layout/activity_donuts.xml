<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.codyy.charts.chartsapplication.DonutsChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:donutsRadius="100dp"
        app:donutsRadiusInnerCircle="65dp"
        app:donutsRadiusInnerCircleShowDivider="true"
        app:donutsRadiusInnerCircleStyle="fill"
        app:donutsRadiusStrokeWidth="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.codyy.charts.chartsapplication.DonutsChart
        android:id="@+id/chart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:donutsRadius="100dp"
        app:donutsRadiusInnerCircle="65dp"
        app:donutsRadiusInnerCircleStyle="stroke"
        app:donutsRadiusOuterCircle="120dp"
        app:donutsRadiusOuterCircleColor="?attr/colorAccent"
        app:donutsRadiusOuterCircleShowPoint="true"
        app:donutsRadiusOuterCircleShowText="true"
        app:donutsRadiusOuterCircleShowStroke="true"
        app:donutsRadiusStrokeWidth="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chart"/>
</android.support.constraint.ConstraintLayout>